{
  "name": "boilerplate-module",
  "version": "0.2.0",
  "description": "Boilerplate for a JavaScript module (browser + node).",
  "keywords": [
    "boilerplate"
  ],
  "homepage": "https://github.com/user/repo",
  "bugs": "https://github.com/user/repo/issues",
  "repository": {
    "type": "git",
    "url": "git@github.com:user/repo.git"
  },
  "author": "My Name (http://github.com/user)",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "commonjs",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/boilerplate-module.min.js",
  "scripts": {
    "build": "npm run lint:fix && npm run build:build",
    "build:build": "rollup -c",
    "ci": "npm run lint && npm run test:unit && npm run build:build && npm run test:dist",
    "lint": "eslint . && prettier . --check",
    "lint:fix": "eslint . --fix && prettier . --write",
    "test": "mocha test --recursive",
    "test:coverage": "c8 --src=src --all --reporter=text --reporter=html npm run test:unit",
    "test:dist": "mocha test/dist --recursive",
    "test:unit": "cross-env TS_NODE_COMPILER_OPTIONS='{ \"module\": \"commonjs\" }' mocha -r ts-node/register test/unit/**/*.{ts,tsx}"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.6",
    "eslint": "^8.10.0",
    "eslint-plugin-mocha": "^10.0.3",
    "mocha": "^9.2.1",
    "prettier": "^2.4.0",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  }
}
